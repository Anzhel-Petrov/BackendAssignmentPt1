@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@using  BackendAssignmentPt1.Models
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link href="/StyleSheet.css" rel="stylesheet" />
    <title>Books Catalogue</title>
</head>
<body>
    <div class="container">
        <h2>The Music CDs</h2>
        <a asp-controller="Home" asp-action="Index">Home</a>
        <div class="flex-container">
            @foreach (MusicCD cd in ViewBag.CDs)
            {
                <div class="flex-item-cd">
                    <strong>Title: </strong> @cd.Title<br />
                    <strong>Author: </strong> @cd.Artist<br>
                    <strong>Price: </strong>@String.Format("{0:0.00}", cd.Price)<br>
                    <strong>Released: </strong> @cd.Label (@cd.Released)<br>
                    <strong>Total Playing Time: </strong>@cd.PlayingTime.ToString("mm\\:ss")<br>
                    <img margin="100" src="/Images/@cd.ImageFileName" alt="@cd.Title" />
                </div>

                <div class="flex-item">
                    <strong>Tracks: </strong>
                    <ol>
                        @foreach (Track track in cd.Tracks)
                        {
                            <li>
                                @track.Title (@track.Composer)
                                @track.Length.Minutes:@track.Length.Seconds
                            </li>
                        }
                    </ol>
                </div>
            }
        </div>
    </div>
</body>
</html>